# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
multi_line_output = 5
lines_after_imports = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{py,rst,ini,html,css,scss,sass,less,json,coffee}]
indent_style = space
indent_size = 4

[*.{py,coffee}]
line_length = 79

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
